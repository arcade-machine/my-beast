.result
  padding-top 245px
  padding-bottom 126px
  margin-bottom: -315px;
  background-image url("../img/bg/bg-result.png")
  background-repeat no-repeat
  background-size 100% 100%
  z-index 1
  position relative
  top -190px

.result__wrapper
  width 47%
  margin 0 auto

  & h2
    padding 0
    margin 0
    margin-bottom 10px
    font-family "IBMPlexSans Regular", Arial, sans-serif
    font-size 48px
    font-weight 400
    text-transform uppercase
    text-align center
    color #ffffff

  & h3
    padding 0
    margin 0
    margin-bottom 20px
    font-family "IBMPlexSans Regular", Arial, sans-serif
    font-size 20px
    font-weight 600
    text-align center
    color #393939

.result__count
  padding 0
  margin 0
  font-family "IBMPlexSans Medium", Arial, sans-serif
  font-size 48px
  line-height 62px
  color #393939
  text-align center

.result__way
  padding 0
  margin 0
  font-family "IBMPlexSans Regular", Arial, sans-serif
  font-size 20px
  line-height 38px
  font-weight 600
  text-align center
  color #393939

@media (max-width: $mobile)
  .result
    margin-bottom: -345px;

  .result__wrapper
    width 100%

