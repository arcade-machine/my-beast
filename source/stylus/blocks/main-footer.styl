.main-footer
  padding-top 215px
  padding-bottom 40px
  background-image url("../img/bg/bg-footer.png")
  background-repeat no-repeat
  background-size cover
  z-index 1
  position relative

.main-footer__wrapper
  width 100%
  max-width 1200px
  margin 0 auto

.main-footer__social
  margin-bottom 25px

.main-footer__phone
  font-family "IBMPlexSans SemiBold", Arial, sans-serif
  font-size 24px
  line-height 33px
  text-align center
  font-weight 200
  display block
  color #ffffff

.main-footer__mail
  margin-bottom 28px
  font-family "IBMPlexSans SemiBold", Arial, sans-serif
  font-size 24px
  line-height 33px
  text-align center
  font-weight 200
  display block
  color #ffffff

