.beast
  padding-top 220px
  padding-bottom 160px
  background-image url("../img/bg/bg-middle.png")
  background-repeat no-repeat
  background-size 100% 100%
  position relative
  z-index 2

.beast__wrapper
  width 100%
  max-width 1200px
  padding-left 75px
  padding-right 75px
  margin 0 auto
  box-sizing border-box

  & h2
    padding 0
    margin 0
    margin-bottom 16px
    font-family "IBMPlexSans Regular", Arial, sans-serif
    font-size 28px
    font-weight 400
    text-transform uppercase
    color #fefefe

  & h3
    padding 0
    padding-bottom 28px
    margin 0
    margin-bottom 20px
    font-family "IBMPlexSans Regular", Arial, sans-serif
    font-size 48px
    font-weight 400
    text-transform uppercase
    color #b9a779
    position relative

    &::before
      content ""
      width 100px
      height 2px
      background-color #ffffff
      position absolute
      bottom 0
      left 0

  & p
    padding 0
    padding-top: 10px;
    margin: 0;
    margin-bottom: 7px;
    font-family "IBMPlexSans Regular", Arial, sans-serif
    font-size 15px
    line-height 24.5px
    color #ffffff
    position relative

@media (max-width: $tablet)
  .beast
    background-size 1366px auto
    background-position 50%

@media(max-width: $mobile)
  .beast
    padding-left 10px
    padding-right 10px
    padding-top 120px
    padding-bottom 120px
    background-size cover

    & h2
      text-align center

    & h3
      font-size 30px
      text-align center

      &::before
        left 50%
        transform translateX(-50px)

  .beast__wrapper
    padding 0

    & p
      font-size 13px
      text-align center
